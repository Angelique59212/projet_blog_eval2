{% extends 'base.html.twig' %}
{% import '_macros/alert.html.twig' as Dialog %}

{% block title %}Article{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                    <td><a href="{{ path('article_edit', {'id': article.id}) }}">Editer</a></td>
                    <td><a href="{{ path('article_visualize', {'id': article.id}) }}">Voir l'article</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('article_add') }}">Ajouter un nouvel article</a>
{% endblock %}
